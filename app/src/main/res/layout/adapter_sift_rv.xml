<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp_10"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sift_rv_tu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:src="@mipmap/u87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="@dimen/dp_15"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/recommend_rv_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银色星芒刺绣网纱底裤"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sift_rv_tu" />

    <TextView

        android:id="@+id/recommend_rv_tv_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_40"
        android:text="￥99"
        android:textColor="#FF0000"
        android:textSize="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recommend_rv_tv_name" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/recommend_rv_tv_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="薄如蝉翼，丝滑如肌肤"
        app:layout_constraintStart_toStartOf="@+id/recommend_rv_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/recommend_rv_tv_name" />


</androidx.constraintlayout.widget.ConstraintLayout>