<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_180"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="@dimen/dp_230">

    <ImageView
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@mipmap/u31"
        android:id="@+id/rv_fresh_tu"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/direct_tv_biaoqian"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@mipmap/u89"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_6"
        android:text="上新"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="银色星芒刺绣网纱底裤"
        android:textColor="#000000"
        android:textSize="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="@+id/rv_fresh_tu"
        app:layout_constraintStart_toStartOf="@+id/rv_fresh_tu"
        app:layout_constraintTop_toBottomOf="@+id/rv_fresh_tu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="薄如蝉翼，丝滑如肌肤"
        android:textColor="#838282"
        android:textSize="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥99"
        android:textColor="#FF0000"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>