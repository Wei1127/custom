<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_adress"
    tools:context=".ui.kuangshopping.activity.SiteMainActivity">

    <RelativeLayout
        android:id="@+id/xiangxidizhi"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/shouhuodizhi"
            android:text="我的收货地址"
            android:textColor="#000000"
            android:textSize="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/xianshidizhi"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toLeftOf="@+id/shouhuodizhijinru"
            android:textColor="#000000"
            android:text="详细地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/shouhuodizhijinru"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jinruhuise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/youhuiquan"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/youhuijuan"
            android:text="请选择优惠券"
            android:textColor="#000000"
            android:textSize="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/youhuijuangeshu"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toLeftOf="@+id/youhuijuanjinru"
            android:textColor="#000000"
            android:text="几张优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/youhuijuanjinru"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jinruhuise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/heji"
            android:text="商品合计"
            android:textColor="#000000"
            android:textSize="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/jiaqian"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:text="价格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>