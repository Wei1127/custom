<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_8"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_sort_tupian"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/neiyi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/iv_sort_wenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qwerty"
        android:textColor="#000000"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_sort_tupian"
        app:layout_constraintStart_toStartOf="@+id/iv_sort_tupian"
        app:layout_constraintTop_toBottomOf="@+id/iv_sort_tupian" />


</androidx.constraintlayout.widget.ConstraintLayout>