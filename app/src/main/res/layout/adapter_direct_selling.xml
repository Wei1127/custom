<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginLeft="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/direct_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="8dp"
        android:text="MUJI制造商"
        android:textColor="#000000"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/direct_tv_qijia"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.9元起"
        android:textColor="#999999"
        android:textSize="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="@+id/direct_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/direct_tv_name" />

    <TextView
        android:id="@+id/direct_tv_biaoqian"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_40"
        android:background="@mipmap/u89"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_6"
        android:text="上新"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/direct_tv_qijia"
        app:layout_constraintStart_toEndOf="@+id/direct_tv_name"
        app:layout_constraintTop_toTopOf="@+id/direct_tv_name"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/direct_iv_tu"
        android:src="@mipmap/u87"
       android:layout_marginTop="@dimen/dp_8"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintStart_toStartOf="@+id/direct_tv_qijia"
        app:layout_constraintTop_toBottomOf="@+id/direct_tv_qijia" />


</androidx.constraintlayout.widget.ConstraintLayout>